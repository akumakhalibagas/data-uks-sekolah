extends ../layout/base
block content
    section.content-header
        h1
            | Tambah Data 
           
    section.content
        .box
            .box-header.with-border
                
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/customers/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama Siswa
                                    input(type='text',value='#{name}',name='name',placeholder='Masukkan Nama Siswa', autofocus).form-control
                                .form-group
                                    label
                                        | Kelas
                                    input(type='text',name='address',placeholder='Masukkan Kelas').form-control
                                .form-group
                                    label
                                        | Waktu
                                    input(type='text',value='#{email}',name='email',placeholder='Masukkan Waktu').form-control
                                .form-group
                                    label
                                        | Keterangan
                                    input(type='text',name='phone',placeholder='Masukkan Keterangan').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/customers').btn.btn-primary.pull-right
                                    | Back